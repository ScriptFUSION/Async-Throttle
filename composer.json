{
  "name": "async/throttle",
  "description": "Throttles async work throughput.",
  "authors": [
    {
      "name": "Bilge",
      "email": "bilge@scriptfusion.com"
    }
  ],
  "require": {
    "php": "^8.1",
    "amphp/amp": "^3",
    "revolt/event-loop": "^1"
  },
  "require-dev": {
    "infection/infection": ">=0.13,<1",
    "phpunit/phpunit": "^9.5.23",
    "roave/security-advisories": "dev-latest"
  },
  "autoload": {
    "psr-4": {
      "ScriptFUSION\\Async\\Throttle\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ScriptFUSIONTest\\Async\\Throttle\\": "test"
    }
  },
  "scripts": {
    "test": "phpunit -c test"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "infection/extension-installer": true
    }
  }
}
