{
  "name": "async/throttle",
  "description": "Throttles async object throughput.",
  "authors": [
    {
      "name": "Bilge",
      "email": "bilge@scriptfusion.com"
    }
  ],
  "minimum-stability": "beta",
  "require": {
    "php": "^8.1",
    "amphp/amp": "^3"
  },
  "require-dev": {
    "infection/infection": ">=0.13,<1",
    "phpunit/phpunit": "^9",
    "roave/security-advisories": "dev-latest"
  },
  "autoload": {
    "psr-4": {
      "ScriptFUSION\\Async\\Throttle\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ScriptFUSIONTest\\Async\\Throttle\\": "test"
    }
  },
  "scripts": {
    "test": "phpunit -c test"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "infection/extension-installer": true
    }
  }
}
